app.controller('LogInCtrl', ['$scope', '$auth', 'UserService', '$location', 'Notification', function($scope, $auth, UserService, $location, Notification){

  $scope.login = function () {
    $auth.submitLogin($scope.loginForm).
    then(function(resp) {
      console.log(resp);
      Notification.success("You have successfully logged in")
      $location.path('/');
    }).catch(function(resp) {
      console.log(resp);
      Notification.error('Incorrect password or email')
    });
  };

}])