app.controller('LogInCtrl', ['$scope', '$auth', '$rootScope', 'UserService', '$location', function($scope, $auth, $rootScope, UserService, $location){
  $scope.login = function () {
    // console.log($scope.loginForm)
    $auth.submitLogin($scope.loginForm).
     then(function(resp) {
       // handle success response
      console.log(resp);
      $rootScope.user = UserService.user.loggedin;
       // redirect back to root when login succesfull
       $location.path('/');
     })
     .catch(function(resp) {
       // handle error response
       console.log(resp);
     });
  };
}])